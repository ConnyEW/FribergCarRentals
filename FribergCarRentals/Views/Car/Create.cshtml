@model FribergCarRentals.ViewModels.CarViewModel

<main class="main-content container d-block flex-grow-1 justify-content-center align-items-center my-5 ">

    <div>
        <h2 class="content-title display-2 my-0">Create Car</h2>
        <hr class="content-hr">
    </div>

    <div class="container admin-create">
        <div class="row justify-content-center">
            <div class="col-10 col-md-8 col-lg-6">
                <form id="passwordForm" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                    <div class="form-group">
                        <h5 class="mt-2">Name</h5>
                        <input asp-for="Name" class="input-text" />
                        <span asp-validation-for="Name" class="text-danger d-block"></span>
                    </div>
                    <div class="form-group">
                        <h5 class="mt-2">Model year</h5>
                        <input asp-for="ModelYear" class="input-text" />
                        <span asp-validation-for="ModelYear" class="text-danger d-block"></span>
                    </div>
                    <div class="form-group">
                        <h5 class="mt-2">Daily rate</h5>
                        <input asp-for="DailyRate" class="input-text" />
                        <span asp-validation-for="DailyRate" class="text-danger d-block"></span>
                    </div>
                    <div class="form-group">
                        <h5 class="mt-2">Fuel type</h5>
                        <select asp-for="FuelType" asp-items="@ViewBag.FuelType" class="input-select"></select>
                        <span asp-validation-for="FuelType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <h5 class="my-3 mx-0 px-0">4WD: <input class="input-checkbox" asp-for="Is4x4" /></h5>
                    </div>
                    <div class="form-group">
                        <h5 class="mt-2">Transmission</h5>
                        <select asp-for="Transmission" asp-items="@ViewBag.Transmission" class="input-select"></select>
                        <span asp-validation-for="Transmission" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <h5 class="mt-2">Image link</h5>
                        <input asp-for="ImageLink" class="input-text" />
                        <span asp-validation-for="ImageLink" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <h5 class="mt-2">Description</h5>
                        <textarea asp-for="Description" class="input-text"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="form-group d-flex justify-content-center">
                            <input type="submit" value="Create" class="w-50 btn btn-standard btn-positive" />
                        </div>
                        <div class="d-flex justify-content-center">
                            <a class="w-50 btn btn-standard btn-negative" asp-action="Index">Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
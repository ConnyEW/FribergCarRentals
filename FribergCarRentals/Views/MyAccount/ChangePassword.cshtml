@model FribergCarRentals.ViewModels.PasswordViewModel

@section BodyScripts {
    <script src="~/js/passwordMatch.js"></script>
}

<main class="main-content container my-5">

    <div>
        <h2 class="content-title display-2">Change Password</h2>
        <hr class="content-hr">
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-10 col-sm-6 col-lg-4 col-xl-3">

            <form id="passwordForm" asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <h5 class="mt-2">Current password</h5>
                    <input type="password" asp-for="Password" class="input-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h5 class="mt-2">New password</h5>
                    <input id="password" type="password" asp-for="NewPassword" class="input-password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h5 class="mt-2">Repeat password</h5>
                    <input id="passwordRepeat" type="password" class="input-password" />
                    <span id="passwordRepeatMessage" class="text-danger d-block"></span>
                </div>

                <div class="row">
                    <div class="col-sm-6 d-flex justify-content-center p-0">
                        <input type="submit" value="Save" class="btn btn-standard btn-positive fs-6 w-100" />
                    </div>
                    <div class="col-sm-6 d-flex justify-content-center p-0">
                        <a class="btn btn-standard fs-6 w-100" asp-action="Index" asp-route-id="@Model.UserId">Back</a>
                    </div>
                </div>

                <input type="hidden" asp-for="UserId" />
            </form>

        </div>
    </div>
</main>


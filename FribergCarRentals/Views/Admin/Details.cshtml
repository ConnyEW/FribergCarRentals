@model FribergCarRentals.ViewModels.AdminViewModel


<main class="main-content container my-5">

    <div>
        <h2 class="content-title display-2">Admin Details</h2>
        <hr class="content-hr">
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-10 col-sm-8">
            <dl class="row">
                <dt class="col-lg-4 fs-5">Admin ID:</dt>
                <dd class="col-lg-8 fs-5">@Html.DisplayFor(model => model.AdminId)</dd>

                <dt class="col-lg-4 fs-5">First name:</dt>
                <dd class="col-lg-8 fs-5">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-lg-4 fs-5">Last name:</dt>
                <dd class="col-lg-8 fs-5">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-lg-4 fs-5">Email:</dt>
                <dd class="col-lg-8 fs-5">@Model.Email</dd>

                <dt class="col-lg-4 fs-5">SuperAdmin:</dt>
                <dd class="col-lg-8 fs-5">@(Model.IsSuperAdmin ? "Yes" : "No")</dd>
            </dl>

            <div class="row">
                <div class="col-6 col-md-4 col-lg-3">
                    <a asp-action="Edit" asp-route-id="@Model?.AdminId" class="btn btn-standard w-100 fs-6">Edit</a>
                </div>
            </div>
            <div class="row">
                <div class="col-6 col-md-4 col-lg-3">
                    <a asp-action="List" class="btn btn-standard fs-6 w-100">Back</a>
                </div>
            </div>
            <div class="row">
                <div class="col-6 col-md-4 col-lg-3">
                    <a asp-action="Delete" asp-route-id="@Model?.AdminId" class="btn btn-standard btn-negative w-100 fs-6"><i class="fa-solid fa-trash-can"></i></a>
                </div>
            </div>
        </div>
    </div>
</main>

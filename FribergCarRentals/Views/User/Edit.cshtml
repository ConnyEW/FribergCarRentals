@model FribergCarRentals.ViewModels.UserViewModel


<main class="main-content container my-5">

    <div>
        <h2 class="content-title display-2">Edit User</h2>
        <hr class="content-hr">
    </div>

    <div class="row d-flex justify-content-center">
        <div class="col-10 col-sm-6 col-lg-4 col-xl-3">

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <h5 class="mt-2">User ID</h5>
                    <input asp-for="UserId" class="input-text" readonly />
                </div>
                <div class="form-group">
                    <h5 class="mt-2">Email</h5>
                    <input asp-for="Email" class="input-text" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h5 class="mt-2">First name</h5>
                    <input asp-for="FirstName" class="input-text" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h5 class="mt-2">Last name</h5>
                    <input asp-for="LastName" class="input-text" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h5 class="mt-2">Phone number</h5>
                    <input asp-for="PhoneNumber" class="input-text" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>


                <div class="row">
                    <div class="col-sm-6 d-flex justify-content-center p-0">
                        <input type="submit" value="Save" class="btn btn-standard btn-positive fs-6 w-100" />
                    </div>
                    <div class="col-sm-6 d-flex justify-content-center p-0">
                        <a class="btn btn-standard fs-6 w-100" asp-action="Details" asp-route-id="@Model.UserId">Back</a>
                    </div>
                </div>

            </form>

        </div>
    </div>

</main>




@model FribergCarRentals.ViewModels.UserViewModel

@section BodyScripts {
    <script src="~/js/passwordMatch.js"></script>
}

<main class="main-content container d-block flex-grow-1 justify-content-center align-items-center my-5 ">

    <div>
        <h2 class="content-title display-2 my-0">Create User</h2>
        <hr class="content-hr">
    </div>

    <div class="container admin-create">
        <div class="row justify-content-center">
            <div class="col-10 col-md-8 col-lg-6">
                <form id="passwordForm" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                    <div class="form-group">
                        <h5 class="mt-2">First name</h5>
                        <input asp-for="FirstName" class="input-text" />
                        <span asp-validation-for="FirstName" class="text-danger d-block"></span>
                    </div>
                    <div class="form-group">
                        <h5 class="mt-2">Last name</h5>
                        <input asp-for="LastName" class="input-text" />
                        <span asp-validation-for="LastName" class="text-danger d-block"></span>
                    </div>
                    <div class="form-group">
                        <h5 class="mt-2">Phone number</h5>
                        <input asp-for="PhoneNumber" class="input-text" />
                        <span asp-validation-for="PhoneNumber" class="text-danger d-block"></span>
                    </div>
                    <div class="form-group">
                        <h5 class="mt-2">Email</h5>
                        <input asp-for="Email" class="input-text" />
                        <span asp-validation-for="Email" class="text-danger d-block"></span>
                    </div>
                    <div class="form-group">
                        <h5 class="mt-2">Password</h5>
                        <input id="password" type="password" asp-for="Password" class="input-password" />
                        <span asp-validation-for="Password" class="text-danger d-block"></span>
                    </div>
                    <div class="form-group">
                        <h5 class="mt-2">Repeat password</h5>
                        <input id="passwordRepeat" type="password" class="input-password" />
                        <span id="passwordRepeatMessage" class="text-danger d-block"></span>
                    </div>

                    <div class="row">
                        <div class="form-group d-flex justify-content-center">
                            <input type="submit" value="Create" class="w-50 btn btn-standard btn-positive" />
                        </div>
                        <div class="d-flex justify-content-center">
                            <a class="w-50 btn btn-standard btn-negative" asp-action="Index">Back</a>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</main>

